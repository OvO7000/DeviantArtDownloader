::-webkit-scrollbar
  width: 10px
  height: 10px
  background-color: #f5f5f5

/*滚动条的轨道*/
::-webkit-scrollbar-track
  background-color: #f5f5f5

/*滚动条的滑块按钮*/
::-webkit-scrollbar-thumb
  background-color: #d5d5d5

/*滚动条的上下两端的按钮*/
::-webkit-scrollbar-button
  display: none

body
  width: 400px

.userinfo
  min-height: 326px
  .userinfo-header
    display: flex
    align-items: center
    justify-content: space-between
    padding: 4px 8px

  .userinfo-checkboxGroup
    max-height: 116px
    overflow-y: scroll
  .collapse .collapse-panel
    border-bottom: none
    .ant-collapse-header
      padding: 4px 8px
      .ant-collapse-arrow
        margin-right: 4px
    .ant-collapse-content-box
      border-top: 1px solid #d9d9d9
      border-bottom: 1px solid #d9d9d9
      padding: 0 0 0 16px

