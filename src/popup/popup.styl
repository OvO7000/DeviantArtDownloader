@import '../common/style/variables.styl'

scrollBar()

body
  padding: 0
  margin: 0 !important
  width: 400px

  // Home component
  .header
    h4
      padding: 0 8px;
  .btns
    padding: 4px 8px

  // Userinfo component
  .userinfo
    .ant-tabs-tab+.ant-tabs-tab
      margin: 0
    .tab-title
      padding: 0 12px
    .ant-tabs-nav
      margin: 0

    .userinfo-btn_selectAllGalleries,
    .userinfo-btn_selectAllFavourites
      margin-right: 8px

    .userinfo-folderGroup
      max-height: 240px
      border-bottom: 1px solid #d9d9d9
      overflow-y: scroll
      padding-left: 4px
      width: 100%

      .ant-checkbox-wrapper
        flex-grow: 1

        > span:last-child
          flex-grow: 1

      .userinfo-folder
        width: 100%
        display: flex
        justify-content: space-between
        align-items: center
        padding: 4px 8px

        .userinfo-folder-name
          display: inline-block
          max-width: 280px
          ellipsis()

        .userinfo-folder-count
          margin-left: 4px
          color: $grey7


