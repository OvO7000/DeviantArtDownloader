@import '../common/style/variables.styl'

scrollBar()

body
  padding: 0
  margin: 0 !important
  width: 400px

  // Home component
  .header
    h4
      padding: 0 8px;
  .btns
    padding: 4px 8px

  // Userinfo component
  .userinfo
    .ant-tabs-tab+.ant-tabs-tab
      margin: 0
    .tab-title
      padding: 0 12px
    .ant-tabs-nav
      margin: 0

    .userinfo-btn_selectAllGalleries,
    .userinfo-btn_selectAllFavourites
      margin-right: 8px

    .userinfo-folderGroup
      max-height: 240px
      border-bottom: 1px solid #d9d9d9
      overflow-y: scroll
      padding-left: 4px
      width: 100%

      .ant-checkbox-wrapper
        flex-grow: 1

        > span:last-child
          flex-grow: 1

      .userinfo-folder
        width: 100%
        display: flex
        justify-content: space-between
        align-items: center
        padding: 4px 8px

        .userinfo-folder-name
          display: inline-block
          max-width: 280px
          ellipsis()

        .userinfo-folder-count
          margin-left: 4px
          color: $grey7


  .settings
    padding: 0 4px
    .group
      margin-bottom: 8px
      .group-inner
        display: flex
        justify-content: flex-start
    .timeRange
      .timeRange-group
        flex-grow: 0
        width: 270px
      .timeRange-split
        width: 30px
        borderLeft: 0
        borderRight: 0
        pointerEvents: none
      .timeRange-input
        width: 120px
        textAlign: center
    .filename
      .filename-button
        border-left: none
        width: 30px
        border-radius: 0 2px 2px 0
      .filename-input
        width: 240px
        border-radius: 2px 0 0 2px
    .conflictAction
      .conflictAction-select
       display: block
      .conflictAction-select,
      .conflictAction-option
        width: 270px
    .settings-info
      margin-left: 8px
    .hint
      height: 20px
      .hint-text
        color: $danger

